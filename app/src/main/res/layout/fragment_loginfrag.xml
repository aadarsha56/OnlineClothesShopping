<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Loginfrag"
    android:background="#c6d97f">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log In "
        android:id="@+id/tv_title"
        android:textSize="50dp"
        android:layout_margin="20dp"
        android:gravity="center"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_lusername"
        android:hint="The Username you chose"
        android:layout_below="@+id/tv_title"
        android:layout_margin="20sp"/>
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_lpassword"
        android:hint="The password you remember"
        android:layout_below="@+id/et_lusername"
        android:layout_margin="20sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:id="@+id/btn_lsignin"
            android:layout_weight="2"
            android:layout_margin="20sp"
            android:layout_below="@+id/et_lpassword"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:id="@+id/btn_forget"
            android:layout_weight="2"
            android:layout_margin="10sp"
            android:layout_below="@+id/btn_lsignin"/>

    </RelativeLayout>

</FrameLayout>